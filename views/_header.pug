header.header
    if user && user.role==='user'
        nav.nav.nav--tours
            a.nav__el(href='/home') QuickTaxi
    else if !user
        nav.nav.nav--tours
            a.nav__el(href='/home') QuickTaxi          
    else
        nav.nav.nav--tours
            a.nav__el(href='/me') QuickTaxi
    .header__logo
        img(src='/img/only-logo.jpg' alt='Qt logo' )
    nav.nav.nav--user
        if user
            btn.nav__el.nav__el--logout Log out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt='User photo')
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login-options') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign up